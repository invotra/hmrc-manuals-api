{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "public_updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "details": {
      "type": "object",
      "properties": {
        "body": {
          "type": "string"
        },
        "section_id": {
          "type": "string"
        },
        "manual": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "slug": {
              "type": "string"
            }
          },
          "required": [
            "title",
            "slug"
          ]
        },
        "breadcrumbs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "section_id": {
                "type": "string"
              },
              "title": {
                "type": "string"
              }
            },
            "required": [
              "section_id",
              "title"
            ]
          }
        },
        "child_section_groups": {
          "$ref": "child_section_groups-schema.json#/child_section_groups"
        }
      },
      "required": [
        "section_id",
        "manual"
      ]
    },
    "update_type": {
      "type": "string",
      "enum": ["major", "minor"]
    }
  },
  "required": [
    "title",
    "public_updated_at",
    "details",
    "update_type"
  ]
}
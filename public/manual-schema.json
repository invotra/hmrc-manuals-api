{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "public_updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "An ISO 8601 datetime, eg 2014-01-23T00:00:00+01:00"
    },
    "details": {
      "type": "object",
      "properties": {
        "child_section_groups": {
          "$ref": "child_section_groups-schema.json#/child_section_groups"
        }
      },
      "required": [
        "child_section_groups"
      ]
    },
    "update_type": {
      "type": "string",
      "enum": ["major", "minor"]
    }
  },
  "required": [
    "title",
    "description",
    "public_updated_at",
    "details",
    "update_type"
  ]
}
